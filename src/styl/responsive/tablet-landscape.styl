$header-height = 81px

$footer-height = 157px
$footer-logo-size = 36px

// HEADER

#header
  font-size: $font-size-basic
  &.stuck
    #header-logo
      font-size: 36px

#strapline
  margin-left: $margin-tiny

#main-nav
  text-align: left
  li:first-of-type
    margin-right: $margin-mid

#main-content
  margin-top: $header-height
  min-height: calc('100vh - ' + ($header-height + $footer-height))

