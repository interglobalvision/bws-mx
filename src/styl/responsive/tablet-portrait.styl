$header-height = 69px

$footer-height = 145px
$footer-logo-size = 28px

// HEADER

#header
  font-size: $font-size-basic
  &.stuck
    #header-logo
      font-size: $footer-logo-size

#main-nav
  li:first-of-type
    margin-right: $margin-basic

#main-content
  margin-top: $header-height
  min-height: calc('100vh - ' + ($header-height + $footer-height))

// ******************************************************

// GALLERY

.slider-holder
  height: 0
  pointer-events: none
  overflow: hidden
  &.active
    height: auto
    pointer-events: auto
    overflow: visible
  h3
    display: none

.gallery-item
  width: auto
  margin-bottom: 0

.slick-slide
  opacity: .5
  display: none
  margin: 0 $margin-small
  &.slick-active
    opacity: 1
  &:focus
    outline: 0
  img
    display: block
    max-width: 80vw
    height: 40vw
    width: auto

.slide-caption
  display: none

#slider-controls
  display: block

// ******************************************************

// FOOTER

#social-icons
  text-align: right

.social-icon
  margin-left: 12px
  margin-right: 0

// ******************************************************

// TAXONOMY ARTIST

.artist-work-thumb-holder
  height: 30vw

